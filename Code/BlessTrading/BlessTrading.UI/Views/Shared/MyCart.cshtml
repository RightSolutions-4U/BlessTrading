@model IEnumerable<BlessTrading.Common.Models.Cart>

@if (Model != null)
{
    int count = 0;
    int sum = 0;

    <div class="contact">
        <div class="container">
            <div class=" contact-w3">
                <div class="col-md-10 contact-left align-content-center">
                    @if (ViewBag.Message != null)
                    {
                        <div>
                            <label id="Message" class="alert alert-danger">@ViewBag.Message</label>
                        </div>
                    }
                    <div class="form-group">
                        <h2><span>Your Cart </span></h2>
                    </div>
                    <div style="min-height: 100px;">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th style="font-size:14px">Name</th>
                                    <th style="font-size:14px">Price color</th>
                                    <th style="font-size:14px">Quantity</th>
                                    <th>&nbsp;</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    sum = Convert.ToInt32(@item.Price) + sum;
                                    count = count + 1;

                                    <tr>
                                        <td>@item.Name</td>
                                        <td> @item.Price</td>
                                        <td>
                                            <input type="button" value="-">
                                            <input type="text" step="1" min="1" max="" name="quantity" value="1" title="Qty" size="2" class="input-text qty text" pattern="" inputmode="">
                                            <input type="button" value="+">
                                        </td>
                                        <td><button style="font-size:20px;color:red"> <i class="fa fa-trash-o " onclick="location.href='@Url.Action("DeleteCart", "Category", item)'"></i></button></td>
                                        <td>&nbsp;</td>
                                    </tr>

                                }
                                <tr>
                                    <td colspan="4" class="text-right"><b>Total: Rs.@sum</b></td>
                                    <td colspan="5" class="text-left">
                                        <b>Total: @count</b>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        @*                                            <button type="button" class="btn btn-success button-Cart" onclick="location.href='@Url.Action("Index", "Home")'"> Continue Shopping >> </button>
                            <button type="button" class="btn btn-success button-Cart" onclick="location.href='@Url.Action("CheckOut", "Carts")'"> Check Out >> </button>
                        *@                                            <input type="submit" value="Continue Shopping >>" onclick="location.href='@Url.Action("Index", "Home")'">
                        <input type="submit" value="Check Out >>" onclick="location.href='@Url.Action("CheckOut", "Carts")'">
                        <br />
                    </div>
                    <div style="min-height: 50px;"></div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>


}
<script src="~/js/jquery-3.1.1.slim.min.js"></script>