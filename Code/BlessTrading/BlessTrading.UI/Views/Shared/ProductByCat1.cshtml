<script type="text/javascript">
                $(document).ready(function () {

                    $(document).on("click", "a.offer-img", function () {
                        var imgsrc = $(this).data('imageurl');
                        $("#productimage").prop("src", imgsrc);

                        var name1 = $(this).data('name1');
                        $("#name1").html(name1);

                        var sdescription = $(this).data('sdescription');
                        $("#sdescription").html(sdescription);

                        var fdescription = $(this).data('fdescription');
                        $("#fdescription").html(fdescription);

                        var price = $(this).data('price');
                        $("#price").html(price);

                        var discount = $(this).data('discount');
                        $("#discount").html(discount);
                    });
                });
</script>
